@model Animal

@{
    ViewData["Title"] = $"Delete {Model.Name} {Model.Birthdate}";
}

<h1>@ViewData["Title"]</h1>

<p>Are you sure you want to delete @Model.Name @Model.Birthdate?</p>

<form method="post">
    <a asp-action="Index">No</a>
    <button type="submit" class="btn btn-primary">Yes</button>
</form>