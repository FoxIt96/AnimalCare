@model Animal

<tr>
    <td>@Model.Name</td>
    <td>@Model.Gender</td>
    <td>@Model.Birthdate</td>
    <td>
        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.Id">
            Edit
        </a>
        <a class="btn btn-warning" asp-action="Delete" asp-route-id="@Model.Id">
            Delete
        </a>
        <button class="btn btn-danger"
                data-bs-toggle="modal"
                data-bs-target="#deleteModal"
                data-id="@Model.Id"
                data-first-name="@Model.Name"
                data-last-name="@Model.Birthdate"
                data-type="delete">
            Delete with modal
        </button>
    </td>
</tr>